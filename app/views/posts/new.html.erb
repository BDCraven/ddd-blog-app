<h1>New Post</h1>

<%= form_with scope: :post, url: posts_path, local: true do |form| %>
<%= form.hidden_field :post_id, value: @post_id %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
